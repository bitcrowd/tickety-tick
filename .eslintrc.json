{
  "root": true,
  "env": {
    "browser": true,
    "jest": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:jest/recommended",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "COMMITHASH": "readonly"
  },
  "parser": "babel-eslint",
  "plugins": [
    "jest",
    "prettier",
    "simple-import-sort"
  ],
  "rules": {
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "specialLink": ["to"]
      }
    ],
    "react/jsx-props-no-spreading": "off",
    "prettier/prettier": "error",
    "simple-import-sort/sort": "error"
  }
}
