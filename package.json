{
  "private": true,
  "version": "2.1.0",
  "name": "tickety-tick",
  "description": "A browser extension that helps you to create commit messages and branch names from story trackers.",
  "author": "Bodo Tasche <bodo@bitcrowd.net>",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all -n build:chrome build:firefox build:safari",
    "pack": "npm-run-all -n pack:chrome pack:firefox pack:safari",
    "build:chrome": "cross-env VARIANT=chrome webpack --mode=production --config webpack.webext.babel.js",
    "build:firefox": "cross-env VARIANT=firefox webpack --mode=production --config webpack.webext.babel.js",
    "build:safari": "webpack --mode=production --config webpack.safari.babel.js",
    "watch:chrome": "npm run build:chrome -- --watch",
    "watch:firefox": "npm run build:firefox -- --watch",
    "watch:safari": "npm run build:safari -- --watch",
    "open:chrome": "./script/open-in-chrome ./dist/chrome https://github.com/bitcrowd/tickety-tick",
    "open:firefox": "web-ext run --source-dir ./dist/firefox --pref startup.homepage_welcome_url=https://github.com/bitcrowd/tickety-tick",
    "bundle:chrome": "cross-env BUNDLE=true npm run build:chrome",
    "bundle:firefox": "cross-env BUNDLE=true npm run build:firefox",
    "lint": "eslint --ext .js,.jsx .",
    "test": "jest",
    "checks": "npm run lint && npm run test"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.5.0",
    "babel-loader": "8.0.5",
    "chrome-launcher": "0.10.5",
    "clean-webpack-plugin": "^2.0.1",
    "copy-webpack-plugin": "5.0.1",
    "cross-env": "5.2.0",
    "css-loader": "2.1.1",
    "cssnano": "^4.1.8",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.11.2",
    "enzyme-to-json": "^3.3.5",
    "eslint": "5.15.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.12.4",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "3.2.0",
    "jest": "^24.5.0",
    "jsdom": "14.0.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "4.11.0",
    "npm-run-all": "4.1.5",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "^6.5.0",
    "react-test-renderer": "16.7.0",
    "sass-loader": "7.1.0",
    "web-ext": "2.9.3",
    "webpack": "4.29.6",
    "webpack-build-notifier": "0.1.30",
    "webpack-chain": "5.2.2",
    "webpack-cli": "^3.1.2",
    "zip-webpack-plugin": "3.0.0"
  },
  "dependencies": {
    "@githubprimer/octicons-react": "^8.2.0",
    "bootstrap": "4.3.1",
    "prop-types": "15.6.2",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "speakingurl": "14.0.1",
    "webextension-polyfill": "^0.3.1"
  }
}
