{
  "private": true,
  "version": "3.1.0",
  "name": "tickety-tick",
  "description": "A browser extension that helps you to create commit messages and branch names from story trackers.",
  "author": "Bodo Tasche <bodo@bitcrowd.net>",
  "license": "MIT",
  "scripts": {
    "build": "run-s -n build:chrome build:firefox build:safari",
    "build:chrome": "cross-env VARIANT=chrome webpack --mode=production --config webpack.webext.babel.js",
    "build:firefox": "cross-env VARIANT=firefox webpack --mode=production --config webpack.webext.babel.js",
    "build:safari": "webpack --mode=production --config webpack.safari.babel.js",
    "watch:chrome": "npm run build:chrome -- --watch",
    "watch:firefox": "npm run build:firefox -- --watch",
    "watch:safari": "npm run build:safari -- --watch",
    "open:chrome": "./script/open-in-chrome ./dist/chrome https://github.com/bitcrowd/tickety-tick",
    "open:firefox": "web-ext run --source-dir ./dist/firefox --pref startup.homepage_welcome_url=https://github.com/bitcrowd/tickety-tick",
    "bundle:chrome": "cross-env BUNDLE=true npm run build:chrome",
    "bundle:firefox": "cross-env BUNDLE=true npm run build:firefox",
    "lint": "eslint --ext .js,.jsx .",
    "test": "jest",
    "checks": "run-s lint test"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "babel-jest": "^24.8.0",
    "babel-loader": "8.0.6",
    "chrome-launcher": "0.10.7",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "5.0.3",
    "cross-env": "5.2.0",
    "css-loader": "2.1.1",
    "cssnano": "^4.1.8",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "5.15.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.13.0",
    "file-loader": "^3.0.1",
    "git-revision-webpack-plugin": "^3.0.3",
    "html-webpack-plugin": "3.2.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "jsdom": "15.1.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "4.12.0",
    "npm-run-all": "4.1.5",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "^6.5.0",
    "react-test-renderer": "16.8.6",
    "sass-loader": "7.1.0",
    "web-ext": "3.0.0",
    "webpack": "4.32.2",
    "webpack-build-notifier": "1.0.2",
    "webpack-chain": "6.0.0",
    "webpack-cli": "^3.3.2",
    "zip-webpack-plugin": "3.0.0"
  },
  "dependencies": {
    "@githubprimer/octicons-react": "^8.5.0",
    "bootstrap": "4.3.1",
    "ky": "^0.11.0",
    "micro-match": "^0.2.0",
    "prettier": "^1.16.4",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-router": "5.0.0",
    "react-router-dom": "5.0.0",
    "react-textarea-autosize": "^7.1.0",
    "speakingurl": "14.0.1",
    "strip-indent": "^2.0.0",
    "webextension-polyfill": "^0.4.0"
  }
}
