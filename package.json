{
  "private": true,
  "version": "2.0.0",
  "name": "tickety-tick",
  "description": "A browser extension that helps you to create commit messages and branch names from story trackers.",
  "author": "Bodo Tasche <bodo@bitcrowd.net>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm-run-all -n build:chrome build:firefox build:safari",
    "pack": "npm-run-all -n pack:chrome pack:firefox pack:safari",
    "build:chrome": "cross-env VARIANT=chrome webpack -p --config webpack.webext.babel.js",
    "build:firefox": "cross-env VARIANT=firefox webpack -p --config webpack.webext.babel.js",
    "build:firefox-local": "cross-env VARIANT=firefox-local webpack -p --config webpack.webext.babel.js",
    "build:safari": "webpack -p --config webpack.safari.babel.js",
    "watch:chrome": "npm run build:chrome -- --watch",
    "watch:firefox": "npm run build:firefox -- --watch",
    "watch:firefox-local": "npm run build:firefox-local -- --watch",
    "watch:safari": "npm run build:safari -- --watch",
    "open:chrome": "./script/open-in-chrome ./dist/chrome https://github.com/bitcrowd/tickety-tick",
    "open:firefox-local": "web-ext run --source-dir ./dist/firefox-local --pref startup.homepage_welcome_url=https://github.com/bitcrowd/tickety-tick",
    "bundle:chrome": "cross-env BUNDLE=true npm run build:chrome",
    "bundle:firefox": "cross-env BUNDLE=true npm run build:firefox",
    "lint": "eslint '**/*.{js,jsx}'",
    "test": "cross-env NODE_ENV=test jasmine",
    "test:coverage": "nyc npm test",
    "test:watch": "cross-env NODE_ENV=test nodemon --ext js,jsx,json --exec jasmine",
    "checks": "npm run lint && npm run test"
  },
  "devDependencies": {
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.3",
    "babel-eslint": "8.0.2",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-register": "6.26.0",
    "chrome-launcher": "0.10.5",
    "copy-webpack-plugin": "4.2.1",
    "cross-env": "5.2.0",
    "css-loader": "0.28.7",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.6.0",
    "eslint": "5.7.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.11.1",
    "extract-text-webpack-plugin": "3.0.2",
    "html-webpack-plugin": "2.30.1",
    "jasmine": "2.8.0",
    "jsdom": "12.2.0",
    "node-sass": "4.9.4",
    "nodemon": "1.18.4",
    "npm-run-all": "4.1.3",
    "nyc": "13.1.0",
    "postcss-loader": "2.0.8",
    "react-test-renderer": "16.5.2",
    "rimraf": "2.6.2",
    "sass-loader": "6.0.6",
    "web-ext": "2.9.1",
    "webpack": "3.8.1",
    "webpack-build-notifier": "0.1.30",
    "webpack-chain": "4.4.2",
    "zip-webpack-plugin": "2.1.0"
  },
  "dependencies": {
    "bootstrap": "4.0.0-alpha.4",
    "octicons": "7.0.1",
    "prop-types": "15.6.2",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "speakingurl": "14.0.1"
  }
}
